<h2><%= @room.name %></h2>

<%= render partial: 'buttons/form', locals: {button: @button} %>


<% @room.buttons.each do |b| %>
	<div data-button-id="<%= b.id %>" class="btn btn-sm btn-primary col-sm-2 room_buttons">
		<%= b.condition %>
		<%= b.votes %>
	</div>
<% end %>


<%= javascript_include_tag "rooms", "data-turbolinks-track" => true %>

